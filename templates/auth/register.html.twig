{% set current_route = 'app_register' %}
{% extends 'base.html.twig' %}
{% form_theme registrationForm 'form/custom_theme.html.twig' %}

{% block title %}GreenGoodies - Inscription{% endblock %}

{% block body %}
<section class="auth">
    <div class="auth__image-container">
        <img src="{{ asset('uploads/inscription.webp') }}" alt="Bannière inscription">
    </div>
    <div class="auth__form-container">
        <h1>Inscription</h1>
        <p>Tous les champs sont obligatoires.</p>
        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.lastName, {
                label: 'Nom',
                row_attr: { class: 'form-group' }
            }) }}
            {{ form_row(registrationForm.firstName, {
                label: 'Prénom',
                row_attr: { class: 'form-group' }
            }) }}
            {{ form_row(registrationForm.email, {
                label: 'Adresse email',
                row_attr: { class: 'form-group' }
            }) }}
            {{ form_row(registrationForm.plainPassword.first, {
                label: 'Mot de passe',
                row_attr: { class: 'form-group' }
            }) }}
            {{ form_row(registrationForm.plainPassword.second, {
                label: 'Confirmation mot de passe',
                row_attr: { class: 'form-group' }
            }) }}
            {{ form_row(registrationForm.cguAccepted, {
                label: 'J\'accepte les CGU de GreenGoodies',
                row_attr: { class: 'form-group-cgu form-group' }
            }) }}

            <button type="submit" class="btn">S'inscrire</button>
            <p class="link">
                <a href="{{ path('app_login') }}">Déjà un compte ? Se connecter</a>
            </p>
        {{ form_end(registrationForm) }}
    </div>
</section>
{% endblock %}
